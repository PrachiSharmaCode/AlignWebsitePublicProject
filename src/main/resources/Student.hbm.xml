<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "org.mehaexample.asdDemo.model.Student" table = "STUDENT">
      
      <meta attribute = "class-description">
         This class contains the Student detail. 
      </meta>
      
      <id name = "id" type = "int" column = "id">
         <generator class="native"/>
      </id>
      
      <property name = "nuid" column = "nuid" type = "string"/>    
      <property name = "emailId" column = "email_Id" type = "string"/>
      <property name = "firstName" column = "first_name" type = "string"/>
      <property name = "middleName" column = "middle_Name" type = "string"/>
      <property name = "lastName" column = "last_name" type = "string"/>
      <property name = "gender" column = "gender" type = "string"/>
      <property name = "phoneNumber" column = "phoneNumber" type = "string"/>
      <property name = "address" column = "address" type = "string"/>
      <property name = "campus" column = "campus" type = "string"/>
      <property name = "major" column = "major" type = "string"/>
      <property name = "enrollmentStatus" column = "enrollmentStatus" type = "string"/>
      <property name = "photo" column = "photo" type = "string"/>
      
   </class>
</hibernate-mapping>